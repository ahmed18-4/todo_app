<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="35dp"
    tools:context=".ui.UpdateTodoActivity">
<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/title_layout_update"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >
    <EditText
        android:id="@+id/title_edit_text_update"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="New Title"
        android:textSize="20sp"
        />

</com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/description_layout_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_layout_update"
        android:layout_marginTop="50dp"
        >
        <EditText
            android:id="@+id/description_edit_text_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="New Description"
            android:textSize="20sp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/date_picker_update_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select the new date"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_layout_update"
        />
    <Button
        android:id="@+id/update_todo_done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Todo"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/date_picker_update_tv"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>